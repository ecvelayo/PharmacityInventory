<% include templates/header.ejs %>
<style>
.center{
    margin: auto;
    width: 50%;
    text-align:center;
}
.topnav {
  overflow: hidden;
  background-color: #333;
}
.button {
    margin: auto;
    display: block;
}
.inline{
    display: flex;
    justify-content: center;
    align-items: center;
    float:left;
    margin-right: 50px;;
}
.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav a.active {
  background-color: #4CAF50;
  color: white;
}
.logo-img {
    height: auto;
    width: auto;
    max-height: 100px;
    max-width: 150px;
    float: left;
    position: relative;
}
</style>
<div class="topnav">
    <img class="logo-img" src="/images/inventory-management-system-logo.png" alt="logo">
  <a href="home">Home</a>
  <a href="products">Products</a>
  <a class="active" href="transactions">Transactions</a>
</div>
<h2 class="center">Transaction # <%=data[0].transaction_id%></h2>
<h2 class="center">Customer Name: <%=data1[0].customer_name%></h2>
<br><br>
<table class= "center table-bordered" id="detailTable">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Quantity</th>
        </tr>
    </thead>
    <% for (var i=0; i<data.length; i++){%>
    <tbody>
        <tr>
            <td><%=data[i].item%></td>
            <td><%=data[i].quantity%></td>
        </tr>
    </tbody>
    <%}%>
</table>
<br><br>
<div style="text-align:center;">
<button><a href="/transactions">Back</a></button>
</div>

