<script>
function add2Cart(id,name,stock,price){
            var markup = "<tr><td>"+id+"</td><td>"+name+"</td><td><input class='quantityItemInCart' type='number' min='1' max='"+stock+" value='1'/></td></td><td>"+price+"</td><td><td><button class='delRow' onclick='deleteRow(this);'>Remove</button></td></tr>";
            $("#cartTable").append(markup);
};
function deleteRow(r){
    var i = r.parentNode.parentNode.rowIndex-1;
    console.log(i);
    document.getElementById("cartTable").deleteRow(i);
}
</script>

